bindsym $mod+r mode "resize"
bindsym $mod+Shift+w exec google-chrome
bindsym $mod+l exec i3lock -i /home/kyndt/Fond/lock.png

# Active le pavé numérique à notre arrivé, requiert le paquet du même nom
exec numlockx on
# Notre conf des terminaux
exec xrdb /home/kyndt/.Xdefault
# Fond d'ecran
exec feh --bg-center /home/kyndt/Fond/wall.jpg

